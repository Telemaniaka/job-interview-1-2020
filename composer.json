{
    "name": "recruitment/commission-task-skeleton",
    "description": "Skeleton for recruitment task",
    "keywords": [],
    "type": "project",
    "autoload": {
        "psr-4": {
            "Recruitment\\CommissionTask\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Recruitment\\CommissionTask\\Tests\\": "tests"
        }
    },
    "require": {
        "php": ">=7.0",
        "ext-bcmath": "*"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.16",
        "mikey179/vfsstream": "^1.6",
        "phpunit/phpunit": "^6.5"
    },
    "config": {
        "sort-packages": true,
        "bin-dir": "bin"
    },
    "scripts": {
        "phpunit": "phpunit",
        "fix-cs": "php-cs-fixer fix",
        "test-cs": "php-cs-fixer fix --dry-run -v",
        "test": ["@phpunit", "@test-cs"]
    }
}
